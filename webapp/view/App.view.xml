<mvcAlias:View
    controllerName="myNamespace.controller.App"
    xmlns="sap.m"
    xmlns:mvcAlias="sap.ui.core.mvc">
    <Button
        text="{i18n>sayHelloButtonText}"
        press=".onShowHello"/>
    <Input
        value="{/recipient/name}"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true"
        width="60%"/>
</mvcAlias:View>